<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_behance_read_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/rectangle_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="14dp"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/shape_behance_read_body"
        android:layout_width="0dp"
        android:layout_height="73dp"
        app:layout_constraintStart_toStartOf="@id/iv_behance_read_body"
        app:layout_constraintEnd_toEndOf="@id/iv_behance_read_body"
        app:layout_constraintTop_toBottomOf="@id/iv_behance_read_body"
        android:background="@drawable/shape_behance_read_body_rect_white_radius_15"
        android:elevation="6dp"/>


    <TextView
        android:id="@+id/tv_behance_read_body_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="6dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/noto_sans_bold"
        android:textColor="@color/black"
        tools:text="LESJOUR!"
        app:layout_constraintStart_toStartOf="@id/shape_behance_read_body"
        app:layout_constraintTop_toTopOf="@id/shape_behance_read_body"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/tv_behance_read_body_name"
        android:elevation="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/noto_sans_medium"
        android:textColor="@color/black"
        tools:text="Margotlevque"
        app:layout_constraintTop_toBottomOf="@id/tv_behance_read_body_title"
        app:layout_constraintStart_toStartOf="@id/tv_behance_read_body_title"
        android:textSize="14sp"

        />

</androidx.constraintlayout.widget.ConstraintLayout>