<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
        name="viewModel"
        type="com.sopt.behance_aos.ui.read.BehanceReadFragment"/>
        </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.read.BehanceReadFragment">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_behance_read_head"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:listitem="@layout/list_behance_read_head"
            android:clipToPadding="false"
            android:paddingEnd="21dp"
            android:overScrollMode="never"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_behance_read_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/rv_behance_read_head"
            tools:listitem="@layout/list_behance_read_body" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>